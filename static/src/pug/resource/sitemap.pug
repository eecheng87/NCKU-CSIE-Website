extends /layouts/resource.pug

append data
  -
    const i18n = Object.freeze( {
      'en-US': {
        'titles': {
          'home': 'home',
          'about': 'about',
          'research': 'research',
          'student': 'student',
          'announcement': 'announcement',
          'resource': 'resource',
        },
        'title':'Sitemap',
      },
      'zh-TW': {
        'titles': {
          'home': '首頁',
          'about': '關於本系',
          'research': '學術研究',
          'student': '學生事務',
          'announcement': '系所公告',
          'resource': '資源連結',
        },
        'title':      '網站地圖',
      }
    } );
    const currentRoute = 'resource/sitemap';
    const alltitles = [
      'home',
      'about',
      'research',
      'student',
      'announcement',
      'resource',
    ];

append title
  +title( i18n[ language ].title )

append stylesheets
  +css( 'resource/sitemap' )

append header
  +banner( i18n[ language ].title )

append content
  mixin sitemap__title( titles )
    each title in titles
      section.sitemap__title( class = `sitemap__title--${ title } ` )= i18n[ language ].titles[ title ]

  figure.logo
    +image( {
      alt: 'csie',
      className: 'logo__image',
      src: 'logo/csie.png',
    } )
    figcaption.logo__caption.caption
      h1.caption__text.caption__text--large 成功大學資訊工程學系暨研究所
      h2.caption__text.caption__text--small Department of Computer Science and Information Engineering
  article.sitemap
    +sitemap__title(alltitles)
    hr.sitemap__horizontal-line
    a.sitemap__link.sitemap__link--home( href = url( { href : '' } ) ) 首頁
    a.sitemap__link.sitemap__link--intro( href = url( { href : 'about/intro' } ) ) 系所介紹
    a.sitemap__link.sitemap__link--professor( href = url( { href : 'about/faculty' } ) ) 師資陣容
    a.sitemap__link.sitemap__link--crew( href = url( { href : 'about/staff' } ) ) 系辦成員
    a.sitemap__link.sitemap__link--award( href = url( { href : 'about/award' } ) ) 榮譽事蹟
    a.sitemap__link.sitemap__link--traffic( href = url( { href : 'about/contact' } ) ) 聯絡我們
    a.sitemap__link.sitemap__link--lab( href = url( { href : 'research/labs' } ) ) 實驗室
    a.sitemap__link.sitemap__link--researcher( href = url( { href : 'research/groups' } ) ) 研究群
    a.sitemap__link.sitemap__link--researchCenter( href = url( { href : 'research/publications' } ) ) 研究中心
    a.sitemap__link.sitemap__link--lectureinformation( href = url( { href : 'student/course' } ) ) 課程資訊
    a.sitemap__link.sitemap__link--college( href = url( { href : 'student/college' } ) ) 大學部
    a.sitemap__link.sitemap__link--master( href = url( { href : 'student/master' } ) ) 碩士
    a.sitemap__link.sitemap__link--phd( href = url( { href : 'student/phd' } ) ) 博士
    a.sitemap__link.sitemap__link--scholarship( href = url( { href : 'student/scholarship' } ) ) 獎學金
    a.sitemap__link.sitemap__link--exchange( href = url( { href : 'student/international' } ) ) 國際交流
    a.sitemap__link.sitemap__link--company( href = url( { href : 'student/internship' } ) ) 企業徵才
    a.sitemap__link.sitemap__link--annall( href = url( { href : 'announcement/all' } ) ) 全部公告
    a.sitemap__link.sitemap__link--annactivity( href = url( { href : 'announcement/activity' } ) ) 活動訊息
    a.sitemap__link.sitemap__link--anncompany( href = url( { href : 'announcement/recruitment' } ) ) 徵人資訊
    a.sitemap__link.sitemap__link--resourcelink( href = url( { href : 'resource' } ) ) 資源連結

append footer

append scripts
  +js( 'resource/sitemap' )
